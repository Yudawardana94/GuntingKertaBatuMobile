<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/image_from_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgBatu"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <ImageView
        android:id="@+id/imgBatu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/batu"
        app:layout_constraintBottom_toTopOf="@id/imgKertas"
        app:layout_constraintEnd_toEndOf="@id/imgLogo"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@id/imgLogo"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <ImageView
        android:id="@+id/imgKertas"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/kertas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgGunting"
        app:layout_constraintStart_toStartOf="@id/imgBatu"
        app:layout_constraintTop_toBottomOf="@id/imgBatu" />

    <ImageView
        android:id="@+id/imgGunting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gunting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgBatu"
        app:layout_constraintStart_toEndOf="@id/imgKertas"
        app:layout_constraintTop_toBottomOf="@id/imgBatu"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>