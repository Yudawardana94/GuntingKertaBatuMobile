<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/title_green"
    tools:context=".landingPage.ThirdLandingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgLanding3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/landing_page3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtLanding3"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/txtLanding3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment_3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgLanding3"
            app:layout_constraintStart_toStartOf="@id/imgLanding3"
            app:layout_constraintEnd_toEndOf="@id/imgLanding3"
            app:layout_constraintBottom_toTopOf="@id/txtInput"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Your name"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/txtLanding3"
            app:layout_constraintStart_toStartOf="@id/txtLanding3"
            app:layout_constraintEnd_toEndOf="@id/txtLanding3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>