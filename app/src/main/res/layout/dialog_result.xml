<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Permainan"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/txtDialogResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 Menang"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDialogTitle"
        app:layout_constraintStart_toStartOf="@id/txtDialogTitle"
        app:layout_constraintEnd_toEndOf="@id/txtDialogTitle" />
    <Button
        android:id="@+id/btnMainLagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Lagi"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDialogResult"
        app:layout_constraintStart_toStartOf="@id/txtDialogResult"
        app:layout_constraintEnd_toEndOf="@id/txtDialogResult"
        />
    <Button
        android:id="@+id/btnKembaliMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Menu"
        android:backgroundTint="@color/title_orange"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnMainLagi"
        app:layout_constraintStart_toStartOf="@id/btnMainLagi"
        app:layout_constraintEnd_toEndOf="@id/btnMainLagi" />

</androidx.constraintlayout.widget.ConstraintLayout>